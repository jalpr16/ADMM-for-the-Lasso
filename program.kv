
<OptionLabel@Label>:
    font_size: '12sp'


<OptionsWidget>:
    cols: 1
    size_hint: 1, 2

    options_box:      options_box
    predicted_y_name: predicted_y_name
    predicted_y:      predicted_y
    actual_y_name:    actual_y_name
    actual_y_button:  actual_y_button
    actual_y_idx:     actual_y_idx
    actual_y:         actual_y

    BoxLayout:
        size_hint: 1, None
        height: 40
        OptionLabel:
            text: "parameters"
            size_hint: 2, 1
        OptionLabel:
            text: "values"
            size_hint: .3, 1
        OptionLabel:
            text: "beta values"
            size_hint: .3, 1

    BoxLayout:
        id: options_box
        size_hint: 1, None
        orientation: 'vertical'


    BoxLayout:
        size_hint: 1, None
        height: 40
        OptionLabel:
            id: predicted_y_name
            size_hint: 1, 1
        Label:
            # this is nothing
            size_hint: 1.3, 1
        OptionLabel:
            id: predicted_y
            size_hint: .3, 1

    BoxLayout:
        size_hint: 1, None
        height: 40
        OptionLabel:
            id: actual_y_name
            size_hint: 1, 1
        Button:
            id: actual_y_button
            text: "random data"
            font_size: '12sp'
            size_hint: .5, 1
        OptionLabel:
            id: actual_y_idx
            size_hint: .5, 1
        Label:
            # this is nothinig
            size_hint: .3, 1
        OptionLabel:
            id: actual_y
            size_hint: .3, 1